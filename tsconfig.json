{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@shared/*": ["./src/shared/*"],
    },
    "incremental": true,
    "resolveJsonModule": true
  }
}
